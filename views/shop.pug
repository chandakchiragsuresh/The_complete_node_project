extends layout.pug
block content
        main
            if prods.length > 0
                div.grid
                    each val in prods
                        article.card.product-item
                            header.card__header
                                h1.product__title #{val.title}
                            div.card__image
                                img(src="https://adn-static1.nykaa.com/nykdesignstudio-images/tr:w-160,/pub/media/catalog/product/4/e/4e14b3dPMAPA52253102_1.jpg?rnd=20200526195200", alt="Cotton T-shirt", class="img-fluid rounded-3", style='width:100px;height:100px;')
                            div.card__content
                                h2.product__price $19.99
                                p.product__description A very interesting book about so many even more interesting things!
                            div.card__actions
                                button.btn Add to Cart
            else 
                h1 No Products Found!


