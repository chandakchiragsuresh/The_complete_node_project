doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document

        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", crossorigin="anonymous", integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p") 
    body 
        //- NAVBAR-CODE
        nav.navbar.navbar-expand-lg
                a.navbar-brand(href="#!") CLOTH STORE 
                button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                span.navbar-toggler-icon

                div.collapse.navbar-collapse#navbarSupportedContent
                    ul.navbar-nav.ml-auto.topnav
                        li.nav-item.active
                            a.nav-link(href="/") SHOP 
                                span.sr-only
                        li.nav-item
                            a.nav-link(href="#") JEANS
                        li.nav-item
                            a.nav-link(href="#") T-SHIRTS
                        li.nav-item
                            a.nav-link(href="#") CASUAL SHIRTS
                        li.nav-item
                            a.nav-link(href="#") HODDIES
                        li.nav-item
                            a.nav-link(href="/admin/add-product") ADD PRODUCT
                              
                nav-item
                    a.topnav-right.btn.btn-primary.text-white(type="button" href="#") Sign In                  
                nav-item
                    a.topnav-right.btn.btn-danger.text-white(type="button" href="#") Register           





        header.main-header  
            if prods.length > 0
                each val in prods    
                        div.card.rounded-3.mb-4
                            div.card-body.p-4
                            div.row.d-flex.justify-content-between.align-items-center
                                div.col-md-2.col-lg-2.col-xl-2
                                    img(src="https://adn-static1.nykaa.com/nykdesignstudio-images/tr:w-160,/pub/media/catalog/product/4/e/4e14b3dPMAPA52253102_1.jpg?rnd=20200526195200", alt="Cotton T-shirt", class="img-fluid rounded-3")
                                div.col-md-3.col-lg-3.col-xl-3
                                    p.lead.fw-normal.mb-2 #{val}
                                        p
                                        span.text-muted Size:  M 
                                        br
                                        span.text-muted Color: Grey
                                div.col-md-3.col-lg-3.col-xl-2.d-flex
                            
                                    button.btn.btn-link.px-2(onclick="this.parentNode.querySelector('input[type=number]').stepDown()")    
                                        i.fas.fa-minus
                                    input.form-control.form-control-sm(type="number", value="2", name="quantity", id="form1", min="0")
                                    
                                    button.btn.btn-link.px-2(onclick="this.parentNode.querySelector('input[type=number]').stepUp()")
                                        i.fas.fa-plus
                                div.col-md-3.col-lg-2.col-xl-2.offset-lg-1
                                    h5.mb-0 $499.00
                                div.col-md-1.col-lg-1.col-xl-1.text-end
                                    a.text-danger(href="#!")             










        //For Cart Rendering Page            
        div.card.mb-4
            div.card-body.p-4.d-flex.flex-row
                div.form-outline.flex-fill
                //label.form-label(for="form1") Discound code 
                input.form-control.form-control-lg(type="text" id="form1")
                    
                button.btn.btn-outline-warning.btn-lg.ms-3(type="button") Apply   

        div.card
            div.card-body
                button.btn.btn-warning.btn-block.btn-lg(type="submit") Proceed to Pay   












    section.h-100.style(background-color: #eee;)
    div.container.h-100.py-5
        div.row.d-flex.justify-content-center.align-items-center.h-100
        div.col-10

            div.d-flex.justify-content-between.align-items-center.mb-4
            h3.fw-normal.mb-0.text-black Shopping Cart
            div 
                p.mb-0  
                    span.text-muted Sort by: 
                    a(href="#!").text-body price 
                    i.fas.fa-angle-down.mt-1

            

            
            

